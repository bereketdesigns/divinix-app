---
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Divinix - A link-in-bio app for designers" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
	</head>
	<body>
    <!-- The global NavBar is restored here, ensuring it appears on every page -->
    <NavBar />
		<main class="container">
      <slot /> 
    </main>
    <script is:inline>
      // This script handles theme synchronization with Telegram
      try {
        const tg = window.Telegram.WebApp;
        tg.ready();
        const applyTheme = () => { document.documentElement.className = tg.colorScheme; };
        tg.onEvent('themeChanged', applyTheme);
        applyTheme();
      } catch (e) {
        // Fallback for when not in Telegram
        document.documentElement.className = 'light';
      }
    </script>
	</body>
</html>