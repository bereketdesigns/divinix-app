---
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';

interface Props {
	title: string;
}
const { title } = Astro.props;

// The server gets the definitive login state from the middleware.
const isLoggedIn = Astro.locals.isLoggedIn;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Divinix - A link-in-bio app for designers" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
	</head>
	<body>
    <!-- The login state is passed as a prop to the NavBar -->
    <NavBar isLoggedIn={isLoggedIn} />
		<main class="container">
      <slot /> 
    </main>
	</body>
</html>