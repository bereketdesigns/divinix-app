---
// There is NO server-side logic here anymore.
// The component is purely presentational, and the client script handles all state.
---
<header>
  <nav class="container">
    <a href="/" class="brand">Divinix</a>
    
    <!-- Both buttons are rendered in the HTML but hidden by default. -->
    <!-- The script below will reveal the correct one. -->
    <a href="/login" id="create-profile-btn" class="nav-button" style="display: none;">Create Your Profile</a>
    <a href="/edit" id="edit-profile-btn" class="nav-button" style="display: none;">Edit Profile</a>
  </nav>
</header>
<script>
  // This script runs on every page as soon as the document is ready.
  // It is the single source of truth for the navigation button's state.
  document.addEventListener('DOMContentLoaded', () => {
    const createBtn = document.getElementById('create-profile-btn') as HTMLAnchorElement | null;
    const editBtn = document.getElementById('edit-profile-btn') as HTMLAnchorElement | null;
    
    // This check is essential to prevent errors if the elements aren't found.
    if (!createBtn || !editBtn) {
      console.error("Navigation buttons not found in the DOM.");
      return;
    }

    // Check for the presence of our authentication cookie in the browser.
    const isLoggedIn = document.cookie.includes('auth_token=');

    // Based on the login state, reveal ONLY the correct button.
    if (isLoggedIn) {
      editBtn.style.display = 'inline-block';
    } else {
      createBtn.style.display = 'inline-block';
    }
  });
</script>
<style>
  /* The styles are unchanged and correct. */
  header {
    position: sticky;
    top: 0;
    width: 100%;
    background-color: var(--header-bg-color);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    z-index: 100;
    border-bottom: 1px solid var(--border-color);
  }
  nav {
    /* container class is now on the nav element */
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .brand {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--text-color);
    text-decoration: none;
  }
  .nav-button {
    font-size: 0.9rem;
    font-weight: 600;
    padding: 0.6rem 1.2rem;
    border-radius: 999px; /* Pill shape */
    background-color: var(--button-color);
    color: var(--button-text-color);
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
    display: inline-block; /* Ensure the anchor tag behaves like a button */
  }
  .nav-button:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 15px color-mix(in srgb, var(--button-color) 30%, transparent);
  }
</style>